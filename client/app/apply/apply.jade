              a(href="https://careerloft.de/", target="_blank")
                img.img-responsive(src="assets/images/sponsors/careerloft.jpg")
        
      .tab-pane.fade(ng-class="{'in active': vm.active === 'profile'}")
        h3.head Personal Information
