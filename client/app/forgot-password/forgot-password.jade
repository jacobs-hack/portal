extends /templates/page_base

block main-headline
  h1 Forgot Password

block main-content
  form.form(name='form', ng-submit='vm.forgotPassword(form)', novalidate='')
    .form-group.has-feedback(ng-class="{'has-error': (form.$invalid) && (form.email.$dirty || vm.submitted)}")
      label Email Address
      input.form-control(type='email', name='email', ng-model='vm.email', ng-minlength='3', required='')
      p.help-block(ng-show='(form.$invalid) && (form.email.$dirty || vm.submitted)')
        | You need to enter a valid email address

    p.help-block  {{ vm.message }}

    button#requestButton.btn.btn-lg.btn-primary(type='submit', ng-class="{active: vm.active}") {{ vm.requestButtonMessage }}